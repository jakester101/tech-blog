<div class="hero is-fullheight is-link">
  <div class="hero-body is-justify-content-center is-align-items-center">
    {{!-- Login Box--}}
    <div class="columns is-flex is-flex-direction-column box" style="height: 435px; margin-bottom: 0px; margin-top: 0px; margin-right: 0px; margin-left: 0px;">
        <h2 class="title has-text-dark has-text-centered">Login</h2>
        <form class="form login-form">
          <div class="form-group column p-2">
            <label for="email-login">Email:</label>
            <div class="control has-icons-left">
            <input class="input" type="text" id="email-login" placeholder="e.g. bobsmith@gmail.com" required>
            <span class="icon is-small is-left">
              <i class="ri-mail-send-line"></i>
            </span>
            </div>
          </div>
          <div class="form-group column p-2">
            <label for="password-login">Password:</label>
            <div class="control has-icons-left">
            <input class="input" type="password" id="password-login" placeholder="*******" required>
                <span class="icon is-small is-left">
                  <i class="ri-lock-password-fill"></i>
                </span>            
            </div>

          </div>
          <div class="column form-group">
            <button class="btn button is-link is-fullwidth" type="submit">login</button>
          </div>
          </form>
    </div>
      {{!-- Sign Up Box --}}
      <div class="columns is-flex is-flex-direction-column box m-5">
        <section>
            <h2 class="page-title title has-text-dark has-text-centered">Signup</h2>
            <form class="form signup-form">
              <div class="form-group column p-2 ">
                <label for="username-signup">Username:</label>
                <div class="control has-icons-left">
                <input class="input" type="text" id="username-signup" placeholder="e.g. bobsmith@gmail.com" required>
                <span class="icon is-small is-left">
                  <i class="ri-folder-user-fill"></i>
                </span>
                </div>
              </div>
              <div class="form-group column p-2 ">
                <label for="email-signup">Email:</label>
                <div class="control has-icons-left">
                <input class="input" type="text" id="email-signup" placeholder="e.g. bobsmith@gmail.com" required>
                <span class="icon is-small is-left">
                  <i class="ri-mail-send-line"></i>
                </span>                
                </div>
              </div>
              <div class="form-group column p-2 ">
                <label for="password-signup">Password:</label>
                <div class="control has-icons-left">
                <input class="input" type="password" id="password-signup" placeholder="*******" required>
                <span class="icon is-small is-left">
                  <i class="ri-lock-password-fill"></i>
                </span>                
                </div>

              </div>
              <div class="form-group column">
                <button class="btn button is-link is-fullwidth" type="submit">Sign Up!</button>
              </div>
            </form>
        </section>
      </div>
    </div>
  </div>
</div>    

